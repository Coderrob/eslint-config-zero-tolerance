{
  "name": "eslint-config-zero-tolerance",
  "version": "1.0.0",
  "description": "ESLint config with zero-tolerance rules for code quality",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "eslint",
    "eslintconfig"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0 || ^9.0.0",
    "eslint-plugin-zero-tolerance": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
